<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".MilapApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Milap">
        <activity
            android:name=".WelcomeActivity"
            android:exported="false" />
        <activity
            android:name=".chatpage.ChatActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".loginsetup.UserId"
            android:exported="false" />
        <activity
            android:name=".loginsetup.UserBio"
            android:exported="false" />
        <activity
            android:name=".profilepage.UserProfileUpdateSection"
            android:exported="false" />
        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".loginsetup.AddPhotosLoginTime"
            android:exported="false" />
        <activity
            android:name=".loginsetup.GetLocation"
            android:exported="false" />
        <activity
            android:name=".loginsetup.DistancePreference"
            android:exported="false" />
        <activity
            android:name=".loginsetup.UserHobbyInterest"
            android:exported="false" />
        <activity
            android:name=".loginsetup.RelationType"
            android:exported="false" />
        <activity
            android:name=".loginsetup.UserReligion"
            android:exported="false" />
        <activity
            android:name=".loginsetup.UserStatus"
            android:exported="false" />
        <activity
            android:name=".loginsetup.InterestedPerson"
            android:exported="false" />
        <activity
            android:name=".loginsetup.LoginMoreAboutGender"
            android:exported="false" />
        <activity android:name=".searchpage.SearchedUserProfileActivity"
            android:exported="false" />
        <activity
            android:name=".loginsetup.GenderPage"
            android:exported="false" />
        <activity
            android:name=".loginsetup.UserAboutPage"
            android:exported="false" />
        <activity
            android:name=".loginsetup.OtpVerification"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".loginsetup.LoginPhoneNumber"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".homepage.HomeActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />

        <service
            android:name=".utils.PushNotificationService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>