                    android:fontFamily="@font/bree_serif"
                    android:text="Cartoon"
                    android:textColor="@color/black"
                    app:checkedIconVisible="false"
                    app:chipBackgroundColor="@drawable/chip_bg_selector"
                    app:chipCornerRadius="25dp"
                    app:chipStrokeColor="@drawable/chip_stroke_selector"
                    app:chipStrokeWidth="2dp"
                    app:closeIconEnabled="false" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/animatedmovies"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bree_serif"
                    android:text="Animated Movies"
                    android:textColor="@color/black"
                    app:checkedIconVisible="false"
                    app:chipBackgroundColor="@drawable/chip_bg_selector"
                    app:chipCornerRadius="25dp"
                    app:chipStrokeColor="@drawable/chip_stroke_selector"
                    app:chipStrokeWidth="2dp"
                    app:closeIconEnabled="false" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/horror"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bree_serif"
                    android:text="Horror"
                    android:textColor="@color/black"
                    app:checkedIconVisible="false"
