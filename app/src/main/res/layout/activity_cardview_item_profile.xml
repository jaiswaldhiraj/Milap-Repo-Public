<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="20dp"
    android:padding="0dp"
    card_view:cardElevation="10dp"
    card_view:cardUseCompatPadding="false"
    card_view:cardPreventCornerOverlap="true"
    android:background="@android:color/transparent"
    card_view:cardBackgroundColor="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:background="@color/black"
        android:padding="0dp">

        <ImageView
            android:id="@+id/cardview_profile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:adjustViewBounds="true"
            android:background="@drawable/rounded_corners_image"
            android:clipToOutline="true"
            android:contentDescription="Profile image not found!"
            android:outlineProvider="background"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/user_blank_profile_image"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />


        <View
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/bottom_gradient_overlay"
            android:clipToOutline="true"
            android:outlineProvider="background"
            android:padding="0dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.73">

<!--            <TextView-->
<!--                android:id="@+id/cardview_user_distance"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="30dp"-->
<!--                android:layout_gravity="end"-->
<!--                android:background="@drawable/cardview_distance_textview_bg"-->
<!--                android:fontFamily="@font/font_2"-->
<!--                android:gravity="center"-->
<!--                android:textColor="@color/white"-->
<!--                android:textSize="14sp" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/cardview_userDP_image"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:contentDescription="User profile picture"
                    android:padding="3dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_blank_profile_image"
                    card_view:shapeAppearanceOverlay="@style/cardview_user_dp_bg"
                    card_view:strokeColor="@color/white"
                    card_view:strokeWidth="2dp" />

                <TextView
                    android:id="@+id/cardview_user_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/font_2"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

            </LinearLayout>


            <!--*** FROM HERE THE USER INFO IS DESIGN ***-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cardview_user_name_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_2"
                    android:paddingTop="8dp"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cardview_profile_bio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_2"
                    android:paddingTop="8dp"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="2dp"
            android:paddingRight="20dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            card_view:layout_constraintVertical_bias="0.0">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cardview_chip_group"
                style="@style/Widget.MaterialComponents.Chip.Entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                card_view:chipSpacingHorizontal="8dp"
                card_view:chipSpacingVertical="-8dp"
                card_view:selectionRequired="false"
                card_view:singleSelection="false">

                <com.google.android.material.chip.Chip
                    android:id="@+id/cardview_user_height"
                    style="@style/cardview_chips_bg" />


                <com.google.android.material.chip.Chip
                    android:id="@+id/cardview_user_life_status"
                    style="@style/cardview_chips_bg" />


                <com.google.android.material.chip.Chip
                    android:id="@+id/cardview_user_religion"
                    style="@style/cardview_chips_bg" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/cardview_user_hobby"
                    style="@style/cardview_chips_bg" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/cardview_user_looking_for"
                    style="@style/cardview_chips_bg" />

            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
