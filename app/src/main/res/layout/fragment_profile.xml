<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_searched_user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".profilepage.ProfileFragment"
    android:background="@color/black">


    <!-- Sticky Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_id"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/black"
            android:gravity="start|center_vertical"
            android:paddingStart="20dp"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />
    </LinearLayout>


    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--         Profile Block -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:layout_margin="6dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/profile_details_bg">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:gravity="center_vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/user_dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:contentDescription="User profile picture"
                        android:padding="3dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/user_blank_profile_image"
                        app:shapeAppearanceOverlay="@style/cardview_user_dp_bg" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="15dp">

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:gravity="start"
                            android:padding="1dp"/>

                        <TextView
                            android:id="@+id/user_age"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:gravity="start"
                            android:padding="1dp"/>

                        <TextView
                            android:id="@+id/user_gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:gravity="start"
                            android:padding="1dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!--         UPDATE PROFILE BUTTON-->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/update_your_profile_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="6dp"
                android:text="@string/update_your_profile"
                android:textSize="18sp"
                android:fontFamily="@font/roboto"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/dark_red_color"
                app:cornerRadius="10dp"/>


            <!--             IMAGES-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">


                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/image_carousel"
                    android:layout_width="match_parent"
                    android:layout_height="400dp" />

                <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
                    android:id="@+id/dotsIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="14dp"
                    app:dotsColor="@color/grey_color"
                    app:selectedDotColor="@color/white"
                    app:dotsSize="8dp"
                    />
            </LinearLayout>


            <!--            USER THOUGHT-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:layout_margin="6dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/profile_details_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start|center"
                        android:layout_marginBottom="4dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/user_thought"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thought"
                            android:textColor="@color/profile_text_grey"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="start"
                            android:padding="0dp"
                            android:paddingStart="8dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:gravity="start|center">


                        <TextView
                            android:id="@+id/user_bio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/font_2"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!--            ESSENTIALS -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:layout_margin="6dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/profile_details_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start|center"
                        android:layout_marginBottom="4dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/tag_icon"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Distance Preference"
                            android:textColor="@color/profile_text_grey"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="start"
                            android:padding="0dp"
                            android:paddingStart="8dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:gravity="start|center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/distance_icon"
                            android:layout_marginStart="4dp"
                            />

                        <TextView
                            android:id="@+id/distance_preference"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginStart="13dp"
                            android:fontFamily="@font/font_2"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--            ESSENTIALS -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:layout_margin="6dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/profile_details_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start|center"
                        android:layout_marginBottom="4dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/tag_icon"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Interested"
                            android:textColor="@color/profile_text_grey"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="start"
                            android:padding="0dp"
                            android:paddingStart="8dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:gravity="start|center">

                        <TextView
                            android:id="@+id/user_interest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginStart="13dp"
                            android:fontFamily="@font/font_2"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!--            ABOUT ME -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:layout_margin="6dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/profile_details_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start|center"
                        android:layout_marginBottom="4dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/tag_icon"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="About me"
                            android:textColor="@color/profile_text_grey"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="start"
                            android:padding="0dp"
                            android:paddingStart="8dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:gravity="start|center">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/hight_icon"
                            />

                        <TextView
                            android:id="@+id/user_height"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginStart="13dp"
                            android:fontFamily="@font/font_2"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:gravity="start|center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/birthday_icon"/>

                        <TextView
                            android:id="@+id/user_dob"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:padding="0dp"
                            android:layout_marginStart="9dp"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:gravity="start|center"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ring_icon"/>

                        <TextView
                            android:id="@+id/user_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:padding="0dp"
                            android:layout_marginStart="13dp"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:gravity="start|center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/relegion_icon"/>

                        <TextView
                            android:id="@+id/user_religion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:padding="0dp"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!--            SEARCHING FOR -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:layout_margin="6dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/profile_details_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="start|center"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start|center"
                        android:layout_marginStart="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/tag_icon"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Searching Milap"
                            android:textColor="@color/profile_text_grey"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:gravity="start"
                            android:padding="0dp"
                            android:paddingStart="8dp"/>
                    </LinearLayout>

                    <com.google.android.material.chip.ChipGroup
                        style="@style/Widget.MaterialComponents.Chip.Entry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="18dp"
                        app:chipSpacingHorizontal="8dp"
                        app:chipSpacingVertical="-8dp"
                        app:selectionRequired="false"
                        app:singleSelection="false">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/user_relation_type"
                            style="@style/cardview_chips_bg" />


                    </com.google.android.material.chip.ChipGroup>
                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <!--            HOBBIES -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:layout_margin="6dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/profile_details_bg">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="start|center"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start|center"
                        android:layout_marginStart="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/interest_icon"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hobbies"
                            android:textColor="@color/profile_text_grey"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:gravity="start"
                            android:padding="0dp"
                            android:paddingStart="8dp"/>
                    </LinearLayout>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/user_hobby_chip_group"
                        style="@style/Widget.MaterialComponents.Chip.Entry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="18dp"
                        app:chipSpacingHorizontal="8dp"
                        app:chipSpacingVertical="-8dp"
                        app:selectionRequired="false"
                        app:singleSelection="false"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>



</FrameLayout>