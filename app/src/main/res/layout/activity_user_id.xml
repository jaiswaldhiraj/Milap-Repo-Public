<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginsetup.UserId"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:orientation="vertical"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.101">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:contentDescription="logo"
            android:src="@drawable/login_user_default_logo_red" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bree_serif"
            android:gravity="center|left"
            android:text="Create your unique user id!"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="28sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_2"
            android:gravity="center|left"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Your user id should only contain alphabet, numbers, underscore and dot"
            android:textColor="#373737"
            android:textSize="16sp" />

            <EditText
                android:id="@+id/user_id"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/font_2"
                android:gravity="center_vertical"
                android:hint="Choose a unique username"
                android:includeFontPadding="false"
                android:inputType="textNoSuggestions|textVisiblePassword"
                android:maxLength="30"
                android:textColor="@color/black"
                android:textSize="18sp" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_color" />

        <TextView
            android:id="@+id/userid_availability_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="user name available !"
            android:textColor="@color/user_id_available"
            android:visibility="gone"
            android:fontFamily="@font/roboto"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/userid_loading"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:lottie_rawRes="@raw/userid_loading_animation"
            android:visibility="gone"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

<!--    CONTINUE BUTTON -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.949" >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/user_id_continue_button"
            style="@style/button_grey"
            android:layout_width="319dp"
            android:layout_height="52dp"
            android:text="Continue"
            android:fontFamily="@font/font_2"
            android:textAllCaps="false"/>

    </LinearLayout>

<!--    LOADING ANIMATION -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loadingAnimation"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/circle_dot_loading_animation" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>