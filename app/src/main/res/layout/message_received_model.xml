<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    app:cardCornerRadius="15dp"
    android:background="#000000"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/received_message_user_dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="User profile picture"
        android:scaleType="centerCrop"
        android:src="@drawable/user_blank_profile_image"
        app:shapeAppearanceOverlay="@style/cardview_user_dp_bg"
        app:strokeWidth="2dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="4dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/message_received_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="user_id "/>


        <TextView
            android:id="@+id/textMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="shows a interest in you , like them back to get your Milap"/>

        <TextView
            android:id="@+id/timeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_color"
            android:textSize="10sp"
            android:text="1min"/>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/showProfileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="14sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/user_id_unavailable"
        app:cornerRadius="10dp"/>

</LinearLayout>