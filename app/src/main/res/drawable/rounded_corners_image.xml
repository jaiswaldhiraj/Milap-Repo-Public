<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Border layer (white border, 4dp thick) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000" /> <!-- Border color -->
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Image mask, inset inside the border -->
    <item
        android:left="4dp"
        android:right="4dp"
        android:top="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="16dp" /> <!-- Outer radius - inset -->
        </shape>
    </item>

</layer-list>
